{
  "compilerOptions": {
    "outDir": "./dist-ts/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["pages/shared/*"]
    }
  },
  "include": [
    "./pages/"
  ]
}
